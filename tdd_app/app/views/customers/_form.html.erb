<%= form_for @customer do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  
  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>

  <%= f.label :smolker %>
  <% { 'Y': 'Yes', 'N': 'No' }.each do |key, value| %>
    <%= f.radio_button :smolker, key %> <%= value %> <br />
  <% end %>  

  <%= f.submit %>
<% end %>
